  <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/A-131-Banner_0e6d2056-3bd5-4ee0-8bd3-7a2a50e30e30_2000x.jpg?v=1657953240" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/PRE-BOOK--banner2_2000x.jpg?v=1658390679" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/deal-of-the-day-new_2000x.png?v=1657957011" alt="Third slide">
